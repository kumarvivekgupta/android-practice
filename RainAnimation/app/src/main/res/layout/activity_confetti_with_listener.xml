<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
        android:id="@+id/generate_confetti_once_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
            android:background="@drawable/theme4"
        android:text="@string/generate_confetti_once" />


        <Button
        android:id="@+id/generate_confetti_stream_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
            android:background="@drawable/theme1"
        android:text="@string/generate_confetti_stream" />

        <Button
        android:id="@+id/generate_confetti_infinite_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
            android:background="@drawable/theme2"
        android:text="@string/generate_confetti_infinite" />

        <Button
        android:id="@+id/generate_confetti_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
            android:background="@drawable/theme3"
        android:text="@string/stop_confetti" />

    </LinearLayout>

    <TextView
        android:id="@+id/num_confetti_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" />

</LinearLayout>
